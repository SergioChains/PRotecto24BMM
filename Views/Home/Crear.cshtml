@model WebApplication1.Models.Usuario
@{
    ViewData["Title"] = "Crear usuario";
}

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white">@ViewData["Title"] </h1>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label asp-for="Nom" class="control-label"></label>
                        <input asp-for="Nom" class="form-control" placeholder="Ingresa Nombre" required/>
                    </div>
                     <div class="form-group">
                        <label asp-for="user" class="control-label"></label>
                        <input asp-for="user" class="form-control" placeholder="Ingresa Usuario" required/>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label"></label>
                        <input asp-for="password" class="form-control" placeholder="Ingrese Contraseña" required />
                    </div>
                  @*  <div class="form-group">
                        <label asp-for="Nom" class="control-label"></label>
                        <input asp-for="Nom" class="form-control" placeholder="Ingresa Nombre" required />
                    </div>*@
                </form>

            </div>

        </div>

    </div>

</div>