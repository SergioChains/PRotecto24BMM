@model WebApplication1.Models.Usuario
@{
    ViewData["Title"] = "Crear usuario";
}

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white">@ViewData["Title"] </h1>
            </div>
            <div class="card-body">
                <form asp-action="Crear_user" method="post">
                    <div class="form-group">
                        <label asp-for="Nom" class="control-label">
                        <input asp-for="Nom" class="form-control" placeholder="Ingresa Nombre" required/>
                        </label>
                    </div>
                     <div class="form-group">
                        <label asp-for="user" class="control-label">
                        <input asp-for="user" class="form-control" placeholder="Ingresa Usuario" required/>
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label">
                        <input asp-for="password" class="form-control" placeholder="Ingrese Contraseña" required />
                        </label>
                    </div>
                  <div class="form-grup mt-3">
                      <button type="submit" class="btn btn-secundary d-blok m-auto">
                          Guardar
                      </button>

                  </div>

                </form>
                <a asp-controller="Home" asp-action="Index">Volver</a>
            </div>

        </div>

    </div>

</div>